<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Restoranku" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/oasis</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/carmine_pink</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Restoranku.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/oasis</item>
        <item name="postSplashScreenTheme">@style/Theme.Restoranku.NoActionBar</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
    </style>

    <style name="Theme.Restoranku.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>